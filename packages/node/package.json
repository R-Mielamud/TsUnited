{
	"name": "@ts-united/node",
	"version": "1.0.0",
	"description": "Helps one TypeScript project (folder containing a tsconfig.json file) import TypeScript/JavaScript code from any other project, while checking each project's code and resolving imports in each project using that project's tsconfig.json.",
	"main": "dist/runtime/index.js",
	"bin": {
		"tsu-node": "./dist/exposed-bin/tsu-node.js",
		"tsu-node-compile": "./dist/exposed-bin/tsu-node-compile.js"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "rimraf dist && tsc && tsc-alias"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/R-Mielamud/TsUnited.git"
	},
	"bugs": {
		"url": "https://github.com/R-Mielamud/TsUnited/issues"
	},
	"homepage": "https://github.com/R-Mielamud/TsUnited/tree/main/packages/node#readme",
	"files": [
		"dist/**",
		"register/**",
		"package.json",
		"README.md"
	],
	"author": "Roman Melamud",
	"license": "MIT",
	"keywords": [
		"typescript",
		"paths",
		"types",
		"type-checks",
		"aliases",
		"resolver",
		"resolution",
		"node",
		"nodejs",
		"mocha"
	],
	"dependencies": {
		"ts-node": "latest",
		"tsconfig-paths": "latest"
	},
	"peerDependencies": {
		"typescript": "*"
	},
	"devDependencies": {
		"rimraf": "3.0.2",
		"tsc-alias": "1.7.0",
		"typescript": "4.8.3"
	}
}
